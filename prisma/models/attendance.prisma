model AttendanceEvent {
  id                     Int                     @id @default(autoincrement())
  date                   DateTime
  hostId                 Int?
  cohostId               Int?
  firstAutofillAt        DateTime? // Track when the first autofill was run
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  activeAttendanceEvents ActiveAttendanceEvent[]
  cohost                 User?                   @relation("CohostAttendanceEvent", fields: [cohostId], references: [id], onDelete: SetNull)
  host                   User?                   @relation("HostAttendanceEvent", fields: [hostId], references: [id], onDelete: SetNull)
  staff                  AttendanceStaff[]
  squads                 Squad[]

  @@index([cohostId], map: "AttendanceEvent_cohostId_fkey")
  @@index([hostId], map: "AttendanceEvent_hostId_fkey")
}

model Squad {
  id      Int             @id @default(autoincrement())
  name    String
  eventId Int
  event   AttendanceEvent @relation(fields: [eventId], references: [id])
  members SquadMember[]

  @@index([eventId], map: "Squad_eventId_fkey")
}

model SquadMember {
  id        Int     @id @default(autoincrement())
  userId    Int
  squadId   Int
  isLead    Boolean @default(false)
  isLate    Boolean @default(false)
  isSplit   Boolean @default(false)
  splitFrom String?
  hasLeft   Boolean @default(false)
  squad     Squad   @relation(fields: [squadId], references: [id])
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([squadId], map: "SquadMember_squadId_fkey")
  @@index([userId], map: "SquadMember_userId_fkey")
}

model AttendanceStaff {
  id      Int             @id @default(autoincrement())
  userId  Int
  eventId Int
  event   AttendanceEvent @relation(fields: [eventId], references: [id])
  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([eventId], map: "AttendanceStaff_eventId_fkey")
  @@index([userId], map: "AttendanceStaff_userId_fkey")
}

model ActiveAttendanceEvent {
  id      Int             @id @default(autoincrement())
  userId  Int             @unique
  eventId Int
  event   AttendanceEvent @relation(fields: [eventId], references: [id])
  user    User            @relation("UserActiveAttendanceEvent", fields: [userId], references: [id], onDelete: Cascade)

  @@index([eventId], map: "ActiveAttendanceEvent_eventId_fkey")
}
